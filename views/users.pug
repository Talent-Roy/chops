extends base

block content 
    link(rel="stylesheet", href="/stylesheets/pages/users.css")
    .row.users.container
        h2.center-align users 
        each user in users
            .col.box.s12.m6.l4.m-2.hoverable
                .card-image.p-2
                    div 
                        img(src=`/img/user/${user.photo}`, alt=`${user.name}`)
                    div
                        p=  user.name
                        p= user.email 
                        p= user.role
                        p=user.phoneNum