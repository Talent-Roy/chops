extends base

block content
    link(rel="stylesheet", href="/stylesheets/pages/my-jobs.css")
    .row.services-section.container
        h2.text-center My jobs
        each job in jobs
            .col.box.s12.m6.l4
                div
                    .card-image
                        img(src='/images/hero.jpg', alt="service")
                        h4.title= job.title
                        p.card-content= job.description
                        .card-action 
                            a(href="#") Bid for job 
                            a(href="#") View details